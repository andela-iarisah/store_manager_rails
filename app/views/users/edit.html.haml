= semantic_form_for @user do |f|
  = f.inputs do
    = f.input :email, input_html: { readonly: true, class: 'input-readonly' }
    = f.input :first_name, input_html: { readonly: true, class: 'input-readonly' }
    = f.input :last_name, input_html: { readonly: true, class: 'input-readonly' }
    = f.input :password
    = f.input :password_confirmation
    = f.input :nick, label: 'Nickname'
    = f.action :submit, label: 'Save', button_html: {data: {disable_with: 'Please wait...'}}
